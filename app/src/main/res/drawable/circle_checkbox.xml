<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="#FFC600"></stroke>
                    <solid android:color="#00000000" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="11dp" android:right="2dp">
                <rotate android:fromDegrees="40" android:pivotX="-55%" android:pivotY="-5%">
                    <shape android:shape="line">
                        <stroke android:width="2dp" android:color="#FFC600" />
                    </shape>
                </rotate>
            </item>
            <item android:bottom="1dp" android:left="5dp" android:right="4dp" android:top="1dp">
                <rotate android:fromDegrees="-60" android:pivotX="55%" android:pivotY="43%">
                    <shape android:shape="line">
                        <stroke android:width="2dp" android:color="#FFC600" />
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#000000"></stroke>
            <solid android:color="#00000000" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
</selector>