<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/cart_anim"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="1"
        android:textColor="@color/brand_primary"
        android:textSize="12dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:background="@drawable/layout_cart"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_marginTop="@dimen/spacing_xmicro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_smallest"
        android:layout_marginLeft="@dimen/spacing_xtiny"
        android:layout_marginRight="@dimen/spacing_xtiny"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

        <Button
            android:id="@+id/schedule_other_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_smallest"
            android:layout_marginRight="@dimen/spacing_smallest"
            android:background="@drawable/transparent_button"
            android:stateListAnimator="@null"
            android:theme="@style/AppTheme.TransparentButton" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_smallest"
        android:layout_marginRight="@dimen/spacing_smallest"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:background="@drawable/transparent_button"
        android:stateListAnimator="@null"
        android:theme="@style/AppTheme.TransparentButton" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_smallest"
        android:layout_marginRight="@dimen/spacing_smallest"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:drawableRight="@drawable/ic_arrow_forward_white"
        android:paddingRight="20dp"
        android:background="@drawable/secondary_button_schedule"
        android:theme="@style/AppTheme.SecondaryButtonSchedule" />

    </LinearLayout>
</RelativeLayout>