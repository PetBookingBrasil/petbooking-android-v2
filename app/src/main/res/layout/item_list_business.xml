<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/business_photo"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/side_nav_bar" />

    <TextView
        android:id="@+id/business_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_micro"
        android:layout_marginLeft="@dimen/spacing_xtiny"
        android:text="4.5"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/business_title"
        app:layout_constraintLeft_toLeftOf="@+id/business_photo" />

    <RelativeLayout
        android:id="@+id/business_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/business_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/icon_category"
        app:layout_constraintTop_toTopOf="@+id/business_photo"
        app:layout_constraintVertical_bias="0.946">

        <TextView
            android:id="@+id/business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/spacing_xmicro"
            android:layout_toLeftOf="@+id/business_distance"
            android:layout_toStartOf="@+id/business_distance"
            android:maxLines="2"
            android:text="PetShop do Carlos da Maria e de José da Silva"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/business_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_xmicro"
            android:background="@drawable/distance_background"
            android:paddingBottom="@dimen/spacing_nano"
            android:paddingLeft="@dimen/spacing_xmicro"
            android:paddingRight="@dimen/spacing_xmicro"
            android:paddingTop="@dimen/spacing_nano"
            android:text="50 Km"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RatingBar
        android:id="@+id/average_rate"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_micro"
        android:layout_marginLeft="@dimen/spacing_xmicro"
        android:rating="4.5"
        android:theme="@style/AppTheme.RatingBar"
        app:layout_constraintBottom_toTopOf="@+id/business_title"
        app:layout_constraintLeft_toRightOf="@+id/business_rate" />

    <TextView
        android:id="@+id/ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_micro"
        android:layout_marginLeft="@dimen/spacing_micro"
        android:text="(50)"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/business_title"
        app:layout_constraintLeft_toRightOf="@+id/average_rate" />

    <ImageView
        android:id="@+id/icon_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xtiny"
        android:layout_marginTop="@dimen/spacing_smallest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_photo"
        app:srcCompat="@drawable/ic_point" />

    <TextView
        android:id="@+id/business_street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_tiny"
        android:layout_marginRight="@dimen/spacing_xmicro"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:text="Rua Manoel João, 42"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/icon_point"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_photo" />

    <TextView
        android:id="@+id/business_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_marginLeft="@dimen/spacing_tiny"
        android:layout_marginRight="@dimen/spacing_xmicro"
        android:layout_marginTop="0dp"
        android:text="Baixada Santista, Santos, SP, 88888-000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/icon_point"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_street" />

    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xmicro"
        android:layout_marginLeft="@dimen/spacing_xmicro"
        android:layout_marginRight="7dp"
        android:layout_marginTop="@dimen/spacing_xmicro"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/business_photo"
        app:layout_constraintHorizontal_bias="0.980"
        app:layout_constraintLeft_toLeftOf="@+id/business_photo"
        app:layout_constraintRight_toRightOf="@+id/business_photo"
        app:layout_constraintTop_toTopOf="@+id/business_photo"
        app:layout_constraintVertical_bias="0.100"
        app:srcCompat="@drawable/ic_favorite_border" />

    <ImageView
        android:id="@+id/icon_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="156dp"
        app:layout_constraintBottom_toTopOf="@+id/business_street"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/business_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/business_photo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_card" />
</android.support.constraint.ConstraintLayout>