<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/business_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_tiny">

    <ImageView
        android:id="@+id/business_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/spacing_tiny"
        android:layout_marginStart="@dimen/spacing_tiny"
        android:layout_marginTop="@dimen/spacing_xtiny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/business_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xmicro"
        android:layout_marginRight="@dimen/spacing_xmicro"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/business_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/reviewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xmicro"
        android:layout_marginStart="@dimen/spacing_xmicro"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/business_photo"
        app:layout_constraintTop_toBottomOf="@+id/business_name">

        <TextView
            android:id="@+id/business_rating_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />

        <com.petbooking.UI.Widget.StarsRating
            android:id="@+id/business_rating_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xmicro"
            android:layout_marginRight="@dimen/spacing_xmicro"
            android:layout_marginTop="@dimen/spacing_nano" />

        <TextView
            android:id="@+id/business_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/streetLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xmicro"
        android:layout_marginStart="@dimen/spacing_xmicro"
        android:layout_marginTop="@dimen/spacing_xmicro"
        app:layout_constraintLeft_toRightOf="@+id/business_photo"
        app:layout_constraintTop_toBottomOf="@+id/reviewLayout">

        <ImageView
            android:id="@+id/icon_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_point" />

        <TextView
            android:id="@+id/business_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xmicro"
            android:layout_toRightOf="@+id/icon_point"
            android:textSize="13sp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>