<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:background="@color/text_color" />

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_nano"
        android:layout_marginLeft="@dimen/spacing_xmicro"
        android:layout_marginRight="@dimen/spacing_xmicro"
        android:layout_marginTop="@dimen/spacing_nano"
        android:background="@drawable/selected_day_background"
        android:gravity="center_vertical"
        android:text="09H"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>