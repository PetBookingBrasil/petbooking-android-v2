<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/layout_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="visible">

     <android.support.v4.view.ViewPager
         android:id="@+id/pagerBanner"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignWithParentIfMissing="true"
         android:paddingBottom="10dp">

         <!-- Add as a direct child of your ViewPager -->
         <com.itsronald.widget.ViewPagerIndicator
             android:id="@+id/view_pager_indicator"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom|center_horizontal"
             android:layout_marginTop="10dp"
             android:gravity="center_vertical"
             app:selectedDotColor="@android:color/black"
             app:unselectedDotColor="@color/gray"/>


     </android.support.v4.view.ViewPager>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/layout_banner"
        android:background="@color/presentation_2"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/header_pets"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listCategorys"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/layout_header"
        android:nestedScrollingEnabled="true"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_add_cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/primary_button"
        android:text="Continuar agendando"
        android:textColor="@color/white"
        android:visibility="gone"/>

</RelativeLayout>