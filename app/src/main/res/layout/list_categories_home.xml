<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pagerBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Add as a direct child of your ViewPager -->
                    <com.itsronald.widget.ViewPagerIndicator
                        android:id="@+id/view_pager_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        app:selectedDotColor="@android:color/black"
                        app:unselectedDotColor="@color/gray" />

                </android.support.v4.view.ViewPager>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listCategorys"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_header"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>