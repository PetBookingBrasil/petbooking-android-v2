<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.petbooking.Components.DrawerItem
            android:id="@+id/my_pets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_icon="@drawable/ic_search"
            app:item_text="@string/my_pets" />

        <com.petbooking.Components.DrawerItem
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_icon="@drawable/ic_search"
            app:item_text="@string/search" />

        <com.petbooking.Components.DrawerItem
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_icon="@drawable/ic_calendar"
            app:item_text="@string/calendar" />

        <com.petbooking.Components.DrawerItem
            android:id="@+id/payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_icon="@drawable/ic_payments"
            app:item_text="@string/payments" />

        <com.petbooking.Components.DrawerItem
            android:id="@+id/favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_icon="@drawable/ic_menu_camera"
            app:item_text="@string/favorites" />

        <com.petbooking.Components.DrawerItem
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_icon="@drawable/ic_settings"
            app:item_text="@string/settings" />


        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xtiny"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xmicro"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>