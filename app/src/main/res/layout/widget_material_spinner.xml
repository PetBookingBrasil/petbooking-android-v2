<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_xmicro"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/spinner_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignTop="@+id/spinner"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/ic_size" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_tiny"
        android:paddingRight="@dimen/spacing_xmicro"
        app:ms_arrowSize="0dp"
        app:ms_enableErrorLabel="false"
        app:ms_floatingLabelColor="@color/brand_primary"
        app:ms_highlightColor="@color/brand_primary"
        app:ms_hint="@string/hint_size"
        app:ms_hintColor="@color/text_color" />

    <ImageButton
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignTop="@+id/spinner"
        android:layout_marginRight="@dimen/spacing_micro"
        android:layout_marginTop="28dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_info" />

</RelativeLayout>