<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_primary</item>
        <item name="colorAccent">@color/brand_primary</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textAppearance">@style/AppFontStyle</item>
        <item name="android:textViewStyle">@style/CustomFont</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/CustomFont</item>
    </style>

    <style name="AppFontStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="CustomFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.NoActionBar.NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimaryDark">@color/brand_primary</item>
    </style>

    <style name="AppTheme.SocialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/facebook_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">@dimen/spacing_xnormal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.SecondaryButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.SecondaryButtonSchedule" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.TransparentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/transparent_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.CallButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/call_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/curious_blue</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="AppTheme.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:fontFamily">@font/corporativesansrdaltregular</item>
    </style>

    <style name="LoginTheme" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="RegisterTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/text_color</item>
        <item name="colorControlHighlight">@color/text_color</item>
        <item name="android:textAppearance">@style/AppFontStyle</item>
        <item name="android:textViewStyle">@style/CustomFont</item>
    </style>

    <style name="BusinessTheme" parent="AppTheme">
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textAppearance">@style/AppFontStyle</item>
        <item name="android:textViewStyle">@style/CustomFont</item>
    </style>

    <style name="AppTheme.BrandAccent">
        <item name="colorAccent">@color/brand_primary</item>
    </style>

    <style name="CustomCheckbox">
        <item name="colorControlNormal">#00CD6B</item>
        <item name="colorControlActivated">#00CD6B</item>
    </style>

    <style name="registerBackground" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textViewStyle">@style/CustomFont</item>
        <item name="android:textAppearance">@style/AppFontStyle</item>
    </style>

    <style name="registerBackgroundReview" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="colorControlNormal">@color/text_gray</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlHighlight">@color/brand_primary</item>
        <item name="android:textViewStyle">@style/CustomFont</item>
        <item name="android:textAppearance">@style/AppFontStyle</item>
    </style>

</resources>
